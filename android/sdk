# install openjdk
sudo apt-get install openjdk-7-jdk

# download android sdk
sudo mkdir /opt/android
cd /opt/android
sudo wget sudo wget https://dl.google.com/android/repository/tools_r25.2.3-linux.zip


sudo unzip tools_r25.2.3-linux.zip
cd tools

# install all sdk packages
sudo ./android update sdk --no-ui

# set path
echo "export PATH=${PATH}:$HOME/sdk/android/platform-tools:$HOME/sdk/android/tools:$HOME/sdk/android/build-tools/25.0.1/"
 ~/.bashrc




source ~/.bahrc

# adb
sudo apt-get install libc6:i386 libstdc++6:i386
# aapt
sudo apt-get install zlib1g:i386
